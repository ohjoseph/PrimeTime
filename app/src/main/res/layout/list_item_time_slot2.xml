<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_rectangle"
    android:orientation="vertical">

    <LinearLayout
        style="@style/ListItemStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_item_time_textView"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="8 AM"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_item_activity_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Sample Activity"/>

            <TextView
                android:id="@+id/list_item_subactivity_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subactivity"
                android:textSize="12sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/list_item_energy_textView"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/ic_energy"
            android:gravity="center"
            tools:text="8"/>

        <TextView
            android:id="@+id/list_item_procrastination_textView"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/ic_procrastination_clock"
            android:gravity="center"
            tools:text="15"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/translucent_gray"/>

</LinearLayout>
